{
  "name": "explicit",
  "displayName": "Explicit",
  "description": "Support for Explicit markup language",
  "version": "0.0.1",
  "publisher": "Gareth618",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "explicit",
        "aliases": [
          "Explicit",
          "explicit"
        ],
        "extensions": [
          ".exp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "explicit",
        "scopeName": "source.exp",
        "path": "./syntaxes/explicit.tmLanguage.json"
      },
      {
        "scopeName": "source.katex",
        "path": "./syntaxes/katex.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[explicit]": {
        "editor.wordWrap": "on",
        "editor.wordBasedSuggestions": false
      }
    },
    "snippets": [
      {
        "language": "explicit",
        "path": "./snippets.json"
      }
    ]
  },
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:explicit"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^8.10.25",
    "@types/vscode": "^1.34.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
